# Codeforces 

#include <bits/stdc++.h>
using namespace std;
 
 
void ayush(){
    long long int n;
    cin>>n;
    int A[n];
    for(int i=0;i<n;i++){
        cin>>A[i];
    }
    int ans=0,index;
    for(int i=0;i<n;i++){
        if(A[i]>=ans){
            ans=A[i];
            index=i;
        }
    }
    cout<<index+1<<"\n";
}
 
 
 
int main() {
	// your code goes here
	long long int t;
	cin>>t;
	while(t--){
	    ayush();
	}
	return 0;
}
